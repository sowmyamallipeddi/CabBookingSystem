            </div>
            <div class="form-group">
                <label asp-for="Cabid" class="control-label"></label>
                <input asp-for="Cabid" readonly class="form-control" />
                <span asp-validation-for="Cabid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fare" class="control-label"></label>
                <input asp-for="Fare" readonly class="form-control" />
                <span asp-validation-for="Fare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gst" class="control-label"></label>
                <input asp-for="Gst" readonly class="form-control" />
                <span asp-validation-for="Gst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceId" class="control-label"></label>
                <input asp-for="DistanceId" readonly class="form-control"/>
                <span asp-validation-for="DistanceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otp" class="control-label"></label>
                <input asp-for="Otp" readonly class="form-control" />
                <span asp-validation-for="Otp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalFare" class="control-label"></label>
                <input asp-for="TotalFare" readonly class="form-control" />
                <span asp-validation-for="TotalFare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" readonly class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" readonly class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
